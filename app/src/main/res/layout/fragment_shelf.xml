<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/has_log_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/shelf_layout"
            android:paddingLeft="@dimen/activity_main_margin"
            android:paddingRight="@dimen/activity_main_margin"
            android:background="@color/textIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/un_log_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_main_margin"
        android:visibility="gone">
        <RelativeLayout
            android:id="@+id/log_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_main_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sync_book_shelf"
                android:textSize="@dimen/button"
                android:textColor="@color/secondaryText"
                />
            <Button
                android:id="@+id/login"
                style="@style/short_btn_style.primary"
                android:text="@string/login"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/book_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/no_book_bookshelf"/>
            <Button
                android:id="@+id/goto_library"
                style="@style/short_btn_style.primary"
                android:layout_below="@id/book_pic"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/activity_main_margin"
                android:text="@string/go_to_library"/>
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>