<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/framelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.hongzhiyuanzj.newercm.view.MyScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/activity_main_margin"
            android:background="@color/secondaryText">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="?attr/actionBarSize"
                android:orientation="horizontal">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/poster"
                    android:layout_width="100dp"
                    android:layout_height="144dp"
                    android:scaleType="fitXY"
                    fresco:placeholderImage="@mipmap/exp"
                    fresco:placeholderImageScaleType="fitXY"  />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/title"
                        android:maxLines="2"
                        android:textColor="@color/textIcon"
                        android:text="白鹿原"/>
                    <TextView
                        android:id="@+id/author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="作者:陈忠实"
                        android:layout_marginTop="@dimen/margin"
                        android:textSize="@dimen/body_device"
                        android:textColor="@color/textIcon"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/margin"
                        android:orientation="horizontal">
                        <com.hongzhiyuanzj.newercm.view.MyRatingBar
                            android:id="@+id/ratingbar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            app:starWidth="@dimen/activity_main_margin"
                            app:starMargin="@dimen/half_margin"/>
                        <TextView
                            android:id="@+id/score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/body_device"
                            android:textColor="@color/textIcon"
                            android:layout_marginLeft="@dimen/margin"
                            />
                        <TextView
                            android:id="@+id/comment_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/body_device"
                            android:textColor="@color/textIcon"
                            android:layout_marginLeft="@dimen/margin"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="@dimen/margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/shelf_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/add_shelf_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_layers_black_24dp"/>
                            <TextView
                                android:id="@+id/add_shelf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/subhead_device"
                                android:layout_marginLeft="@dimen/margin"
                                android:textColor="@color/backarrow_color_selector"
                                android:text="@string/add_shelf"/>
                        </LinearLayout>
                        <!--<LinearLayout-->
                            <!--android:id="@+id/reading_container"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:orientation="horizontal">-->
                            <!--<View-->
                                <!--android:layout_width="@dimen/line_height"-->
                                <!--android:layout_marginLeft="@dimen/margin"-->
                                <!--android:background="@color/textIcon"-->
                                <!--android:layout_height="match_parent"/>-->
                            <!--<ImageView-->
                                <!--android:id="@+id/start_reading_img"-->
                                <!--android:layout_marginLeft="@dimen/margin"-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:src="@drawable/ic_layers_black_24dp"/>-->
                            <!--<TextView-->
                                <!--android:id="@+id/start_reading"-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:textSize="@dimen/subhead_device"-->
                                <!--android:layout_marginLeft="@dimen/margin"-->
                                <!--android:textColor="@color/backarrow_color_selector"-->
                                <!--android:text="@string/start_reading"/>-->
                        <!--</LinearLayout>-->
                        <LinearLayout
                            android:id="@+id/recommend_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/recommend_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_shopping_cart_black_24dp"/>
                            <TextView
                                android:id="@+id/recommend"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/subhead_device"
                                android:layout_marginLeft="@dimen/margin"
                                android:textColor="@color/backarrow_color_selector"
                                android:text="@string/i_recommend"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/activity_main_margin">
            <LinearLayout
                android:id="@+id/reading_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/subhead_device"
                    android:text="@string/read_link"
                    android:textColor="@color/textPrimary"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/read_list"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/dividerColor"></View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_main_margin"
                android:textSize="@dimen/subhead_device"
                android:text="@string/writing_info"
                android:textColor="@color/textPrimary"/>
            <TextView
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:textSize="@dimen/body_device"
                android:lineSpacingMultiplier="1.5"
                android:maxLines="3"/>
            <TextView
                android:id="@+id/show_total"
                style="@style/round_btn_primary_style"
                android:text="@string/show_total"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                android:layout_marginTop="@dimen/margin"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:layout_marginTop="@dimen/activity_main_margin"
                android:background="@color/dividerColor"></View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_main_margin"
                android:textSize="@dimen/subhead_device"
                android:text="@string/book_tag"
                android:textColor="@color/textPrimary"/>
            <LinearLayout
                android:id="@+id/tag_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:layout_marginTop="@dimen/activity_main_margin"
                android:background="@color/dividerColor"></View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_main_margin"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/subhead_device"
                    android:text="@string/talk"
                    android:textColor="@color/textPrimary"/>
                <TextView
                    android:id="@+id/i_want_talk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/secondaryText"
                    android:textSize="@dimen/caption"
                    android:paddingTop="@dimen/half_margin"
                    android:paddingBottom="@dimen/half_margin"
                    android:paddingLeft="@dimen/margin"
                    android:paddingRight="@dimen/margin"
                    android:text="@string/i_want_talk"
                    android:background="@drawable/round_btn_gray_bg"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
           <LinearLayout
               android:id="@+id/talk_list_container"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:visibility="visible">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/talk_list"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>
                <TextView
                    android:id="@+id/all_talk"
                    style="@style/round_btn_primary_style"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin"
                    android:text="@string/look_all_talk"
                    />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/no_talk_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <ImageView
                    android:id="@+id/img"
                    android:layout_width="112dp"
                    android:layout_height="112dp"
                    android:layout_marginTop="@dimen/activity_main_margin"
                    android:src="@mipmap/exp"
                    android:layout_centerInParent="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/subhead_device"
                    android:textColor="@color/secondaryText"
                    android:text="@string/no_comment"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/img"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:layout_marginTop="@dimen/activity_main_margin"
                android:background="@color/dividerColor"></View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_main_margin"
                android:textSize="@dimen/subhead_device"
                android:text="@string/book_info"
                android:textColor="@color/textPrimary"/>
            <TextView
                android:id="@+id/detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:textSize="@dimen/body_device"
                android:lineSpacingMultiplier="1.5"
                />
        </LinearLayout>
        </LinearLayout>
    </com.hongzhiyuanzj.newercm.view.MyScrollView>
    <include layout="@layout/toolbar"/>
</FrameLayout>