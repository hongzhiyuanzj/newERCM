<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/secondaryText</item>
    </style>

    <style name="short_btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textSize">@dimen/button</item>
        <item name="android:paddingLeft">@dimen/activity_main_margin</item>
        <item name="android:paddingRight">@dimen/activity_main_margin</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="short_btn_style.primary">
        <item name="android:background">@drawable/btn_bg_selector</item>
        <item name="android:textColor">@color/backarrow_color_selector</item>
    </style>
    <style name="long_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">@dimen/button</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="long_button_style.primary">
        <item name="android:background">@drawable/btn_bg_selector</item>
        <item name="android:textColor">@color/backarrow_color_selector</item>
    </style>

    <style name="long_button_style.white">
        <item name="android:background">@color/textIcon</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>
    <style name="small_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:textSize">@dimen/caption</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="small_button_style.primary">
        <item name="android:background">@drawable/btn_bg_selector</item>
        <item name="android:textColor">@color/backarrow_color_selector</item>
    </style>

    <!--////// mine_fragment-->
    <style name="mine_relative">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingLeft">@dimen/activity_main_margin</item>
        <item name="android:paddingRight">@dimen/activity_main_margin</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/under_line_bg</item>
    </style>
    <style name="mine_image">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>
    <style name="mine_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/subhead_device</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:layout_marginLeft">@dimen/activity_main_margin</item>
    </style>

    <style name="tag_text_appearance">
        <item name="android:textSize">@dimen/subhead_device</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="round_btn_primary_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_press_white_color_selector</item>
        <item name="android:textSize">@dimen/button</item>
        <item name="android:background">@drawable/round_btn_primary_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/half_margin</item>
        <item name="android:paddingBottom">@dimen/half_margin</item>
        <item name="android:paddingLeft">@dimen/margin</item>
        <item name="android:paddingRight">@dimen/margin</item>
    </style>
    <!--//////////////////////////////////////////////////////////////////////////////////////-->
    <!--//////////////////////////////////////////////////////////////////////////////////////-->
    <!--//////////////////////////////////////////////////////////////////////////////////////-->
    <!--zxing-->
    <style name="ResultButton" parent="@android:style/Widget.Holo.Button.Borderless.Small">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="ShareButton" parent="@android:style/Widget.Holo.Button.Borderless.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
